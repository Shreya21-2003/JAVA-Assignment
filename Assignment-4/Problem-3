import java.util.ArrayList;
import java.util.List;

public class ListOperations {
    public static void main(String[] args) {
        // Step (a): Create a List and add elements
        List<String> stringList = new ArrayList<>();
        stringList.add("Apple");
        stringList.add("Banana");
        stringList.add("Cherry");
        stringList.add("Mango");
        System.out.println("List after adding elements: " + stringList);

        // Step (b): Remove an element by value
        stringList.remove("Banana");
        System.out.println("List after removing 'Banana': " + stringList);

        // Step (b): Remove an element by index
        stringList.remove(1);  // Removes "Cherry"
        System.out.println("List after removing element at index 1: " + stringList);

        // Step (c): Replace an element at a specific index
        stringList.set(1, "Orange");  // Replaces "Mango" with "Orange"
        System.out.println("List after replacing element at index 1: " + stringList);
    }
}
